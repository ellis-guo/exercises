{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["pk", "name", "slug", "instructions"],
    "properties": {
      "pk": {
        "type": "integer",
        "minimum": 0
      },
      "name": {
        "type": "string"
      },
      "slug": {
        "type": "string"
      },
      "instructions": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}
